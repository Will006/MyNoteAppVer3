<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Folder Name:"
        android:fadingEdge="horizontal"
        android:textColor="#66e0ff"
        android:background="#003d4d"

        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#002933"
        >

        <EditText
            android:id="@+id/add_folder_file_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="File Name"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_folder_y"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#00b300"/>

            <Button
                android:id="@+id/add_folder_n"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#b30000"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>